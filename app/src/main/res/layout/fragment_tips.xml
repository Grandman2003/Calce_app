<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="10sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Space
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textStyle="bold|italic"
                    android:text="Общее потребление кВт/месяц "
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="К оплате:"

                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:text="Освещение:"

                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/svet_pow"
                    android:layout_width="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"

                    android:text="" />

                <TextView
                    android:id="@+id/svet_cost"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:text=""

                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Бытовая техника:"

                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/appl_pow"
                    android:layout_width="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"

                    android:text="" />

                <TextView
                    android:id="@+id/appl_cost"
                    android:layout_width="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"

                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="133dp"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:text="Компьютерная электроника:"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/comp_pow"
                    android:layout_width="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:layout_height="match_parent"
                    android:text=""

                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/comp_cost"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:textSize="18dp"
                    android:layout_height="match_parent"
                    android:text=""

                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="106dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    android:text="Прочие устройства:"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/other_pow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:text=""
                    android:textColor="#FFFFFF"

                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/other_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:text=""
                    android:textColor="#FFFFFF"

                    android:textSize="18dp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/su"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="top"
                android:layout_margin="4dp"
                android:text="  Итого: "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="#00FFFFFF"
        android:text="Вернуться назад >  "
        android:textColor="#FFFFFF" />

</androidx.cardview.widget.CardView>